# Configuración de Base de Datos
# Copiar este archivo como .env y completar con los valores reales

# Host del servidor de base de datos (puede ser IP o nombre de host)
DB_HOST=localhost

# Puerto de MySQL/MariaDB (por defecto 3306)
DB_PORT=3306

# Usuario de la base de datos
DB_USER=root

# Contraseña del usuario
DB_PASSWORD=tu_contraseña_aqui

# Nombre de la base de datos
DB_NAME=wsur

# Configuración de Flask
# Cambiar a False en producción
DEBUG=True

# Puerto donde correrá la aplicación
PORT=5000

# Host de la aplicación (0.0.0.0 para acceso desde red local)
HOST=0.0.0.0
